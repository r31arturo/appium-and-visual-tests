{
  "name": "appium-and-visual-tests",
  "version": "1.0.0",
  "description": "Minimal WebdriverIO + Appium mobile functional and visual test harness",
  "main": "wdio.conf.js",
  "scripts": {
    "test": "wdio run ./wdio.conf.js",
    "test:android": "PLATFORM_NAME=Android wdio run ./wdio.conf.js",
    "test:ios": "PLATFORM_NAME=iOS wdio run ./wdio.conf.js",
    "visual": "VISUAL_COMPARE=true wdio run ./wdio.conf.js",
    "test:ci": "wdio run ./wdio.conf.js",
    "test:ci:login": "wdio run ./wdio.conf.js --spec ./tests/specs/login.spec.js"
  },
  "keywords": [
    "appium",
    "webdriverio",
    "mobile",
    "browserstack",
    "visual-testing"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@wdio/allure-reporter": "^9.23.2",
    "@wdio/appium-service": "^9.23.2",
    "@wdio/browserstack-service": "^9.23.2",
    "@wdio/cli": "^9.23.2",
    "@wdio/globals": "^9.23.0",
    "@wdio/junit-reporter": "^9.23.2",
    "@wdio/local-runner": "^9.23.2",
    "@wdio/mocha-framework": "^9.23.2",
    "@wdio/spec-reporter": "^9.23.2",
    "@wdio/visual-service": "^9.1.1",
    "appium": "^3.1.2",
    "appium-uiautomator2-driver": "^6.7.10",
    "appium-xcuitest-driver": "^10.17.1",
    "mocha": "^11.7.5",
    "mochawesome-report-generator": "^6.3.2",
    "sharp": "^0.34.5",
    "wdio-mochawesome-reporter": "^7.0.0",
    "webdriverio": "^9.23.2"
  }
}
